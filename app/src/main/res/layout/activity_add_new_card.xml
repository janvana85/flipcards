<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- EditText views for front and back text -->
    <EditText
        android:id="@+id/front_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Front Text"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <EditText
        android:id="@+id/back_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Back Text"
        android:layout_below="@id/front_text"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"/>

    <!-- Button to add a new card -->
    <Button
        android:id="@+id/insert_card_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Card"
        android:layout_below="@id/back_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"/>

    <!-- ListView to display the cards -->
    <ListView
        android:id="@+id/listViewCards"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/insert_card_button"
        android:layout_marginTop="16dp"
        android:divider="@null"
        android:dividerHeight="0dp" />

</RelativeLayout>
